{
  "name": "optics-backend",
  "version": "1.0.0",
  "description": "Backend service for optics simulator",
  "main": "dist/server.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "echo 'Starting TypeScript compilation...' && tsc --verbose && echo 'TypeScript compilation complete'",
    "preinstall": "echo 'Starting npm install...'",
    "postinstall": "echo 'npm install complete'",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "scrape": "ts-node src/scripts/scrape-leupold.ts"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/puppeteer": "^7.0.4",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "puppeteer": "^21.5.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
} 